generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  hashedPassword  String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  gameSaves       GameSave[]
  movementEnergy  Int       @default(1000) // Starting energy for free tier
  lastEnergyRefill DateTime @default(now()) // To track daily refill
  isPremium       Boolean   @default(false)
  stripeCustomerId String?   @unique // For Stripe integration
}

model GameSave {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  slot      Int      // Save slot number (1-5)
  data      Json     // Game state data
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, slot])
}
